<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_rounded_grey"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_looking_number"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/green"
            android:visibility="gone"
            tools:text="Сейчас просматривает 7 человек"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Дизайнер для маркетплейсов Wildberries, Ozon " />

        <TextView
            android:id="@+id/tv_salary"
            style="@style/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            tools:text="1500-2900 Br"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Минск" />

        <TextView
            android:id="@+id/tv_company"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableEnd="@drawable/ic_verified"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:ignore="UseCompatTextViewDrawableXml"
            tools:text="Еком дизайн" />

        <TextView
            android:id="@+id/tv_experience"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_experience"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:ignore="UseCompatTextViewDrawableXml"
            tools:text="Опыт от 1 года до 3 лет" />

        <TextView
            android:id="@+id/tv_published_date"
            style="@style/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_3"
            tools:ignore="UseCompatTextViewDrawableXml"
            tools:text="Опубликовано 16 февраля" />

        <Button
            android:id="@+id/btn_apply"
            style="@style/ButtonText2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_button"
            android:backgroundTint="@color/green"
            android:padding="0dp"
            android:text="@string/title_btn_apply"
            android:textAllCaps="false"
            app:backgroundTint="@color/green" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|top"
        android:background="@android:color/transparent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_heart" />

</FrameLayout>